<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollX="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <EditText
            android:id="@+id/command_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="@string/command_hint"
            android:imeOptions="actionSend" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="sendCommand"
            android:text="@string/button_send" />
    </LinearLayout>

    <TextView
        android:id="@+id/log_textview"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:clickable="false"
        android:enabled="true"
        android:scrollbars="vertical"
        android:textColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="293dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/gapnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Program Number" />

            <Button
                android:id="@+id/gapnam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Program Name" />

            <Button
                android:id="@+id/gappow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Power" />

            <Button
                android:id="@+id/gaptim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Active Program Time" />

            <Button
                android:id="@+id/gapsin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Program Sieve Number" />

            <Button
                android:id="@+id/gapeti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Active Program Enable Time" />

            <Button
                android:id="@+id/gapdti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Avtive Program Disable Time" />

            <Button
                android:id="@+id/gc10di"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calibration 100 diameter" />

            <Button
                android:id="@+id/gc15di"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calibration 150 diameter" />

            <Button
                android:id="@+id/gc20di"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calibration 200 diameter" />

            <Button
                android:id="@+id/sderun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Run" />

            <Button
                android:id="@+id/sdesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop" />

            <Button
                android:id="@+id/sacprg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Acive Program" />

            <Button
                android:id="@+id/sacpow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Power" />

            <Button
                android:id="@+id/sactim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Time" />

            <Button
                android:id="@+id/saceti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Time" />

            <Button
                android:id="@+id/sacdti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disable Time" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/rule"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginLeft="50dp"
        android:text="-"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <!-- GAUGE CHART -->
    <!--app:gaugePointEndColor="md_red_500"
        app:gaugePointStartColor="md_green_500"
        app:gaugeDividerColor="md_yellow_500"
        app:gaugeStrokeColor="md_grey_400"-->

</LinearLayout>
