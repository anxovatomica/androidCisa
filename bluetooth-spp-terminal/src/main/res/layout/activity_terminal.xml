<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1147a9"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollX="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/sdesto"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableLayout1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="Stop" />

    <Button
        android:id="@+id/sderun"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sdesto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="179dp"
        android:text="Run" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

    </LinearLayout>

    <TextView
        android:id="@+id/log_textview"
        android:layout_width="430dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:enabled="true"
        android:scrollbars="vertical"
        android:textColor="@android:color/white" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="406dp"
        android:layout_height="293dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="15dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:text="Program Name"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/gapnam"
                android:gravity="center_horizontal"
                android:text="-"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:text="Program Number"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/gapnum"
                android:gravity="center_horizontal"
                android:text="-"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:text="Program Power"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/gappow"
                android:gravity="center_horizontal"
                android:text="-"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:text="Program Active Time"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/gaptim"
                android:gravity="center_horizontal"
                android:text="-"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:text="Program Sieve Number"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/gapsin"
                android:gravity="center_horizontal"
                android:text="-"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_height="match_parent"
                android:text="Enable Time"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/gapeti"
                android:gravity="center_horizontal"
                android:text="-"></TextView>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="101dp"
        android:layout_marginStart="136dp"
        android:text="Start!" />




    <!-- GAUGE CHART -->
    <!--app:gaugePointEndColor="md_red_500"
        app:gaugePointStartColor="md_green_500"
        app:gaugeDividerColor="md_yellow_500"
        app:gaugeStrokeColor="md_grey_400"-->

</RelativeLayout>
